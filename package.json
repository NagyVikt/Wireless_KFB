{
  "name": "wirelesskfb",
  "version": "1.0.1",
  "description": "Wireless KFB Project",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "author": {
    "name": "Nagy Viktor",
    "email": "vnagy.kssk@kroschu.com",
    "url": "https://github.com/nagyv"
  },
  "license": "MIT",
  "keywords": [
    "nextjs",
    "electron",
    "typescript"
  ],
  "scripts": {
    "dev": "concurrently -k -n \"SERVER,NEXT,ELECTRON\" -c \"magenta,yellow,blue\" \"ts-node-dev --esm --respawn --transpile-only server.ts\" \"next dev\" \"npx wait-on http://localhost:3001 && electron .\"",
    "build:renderer": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:server && npm run build:electron && npx electron-builder --linux AppImage",
    "build:arm64": "npm run build:renderer && npm run build:electron && npx electron-builder --linux AppImage --arm64",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "npx electron .",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.+(ts|js|tsx)\" --fix",
    "format": "prettier . --write",
    "postinstall": "npx electron-builder install-app-deps"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@serialport/parser-readline": "^13.0.0",
    "@supabase/supabase-js": "^2.49.8",
    "@t3-oss/env-nextjs": "0.13.6",
    "dotenv": "^17.0.0",
    "electron-serve": "^1.2.0",
    "framer-motion": "^12.23.12",
    "next": "15.3.3",
    "next-seo": "^6.5.0",
    "next-themes": "^0.4.6",
    "pg": "^8.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "serialport": "^13.0.0",
    "zod": "3.25.42"
  },
  "devDependencies": {
    "@types/pg": "^8.15.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "9.27.0",
    "husky": "9.1.7",
    "postcss": "^8.4.38",
    "prettier": "3.5.3",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.8.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.nagyv.typescriptnextjsstarter",
    "productName": "Wireless KFB",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      ".next/**/*",
      ".env.production",
      "dist/main/**/*",
      "dist-server/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      {
        "from": "assets/icon.png",
        "to": "assets/icon.png"
      },
      {
        "from": "dist-server",
        "to": "dist-server"
      }
    ],
    "linux": {
      "icon": "assets",
      "target": [
        "AppImage"
      ]
    }
  }
}
