{
  "name": "wirelesskfb",
  "version": "1.0.1",
  "description": "Wireless KFB Project",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "author": {
    "name": "Nagy Viktor",
    "email": "vnagy.kssk@kroschu.com",
    "url": "https://github.com/nagyv"
  },
  "license": "MIT",
  "keywords": [
    "nextjs",
    "electron",
    "typescript"
  ],
  "scripts": {
    "redis:up": "bash ./scripts/redis-up.sh",
    "redis:wait": "npx wait-on tcp:127.0.0.1:6379",
    "predev": "npm run redis:up && npm run redis:wait",
    "dev": "concurrently -k -n \"SERVER,NEXT,ELECTRON\" -c \"magenta,yellow,blue\" \"ts-node-dev --esm --respawn --transpile-only server.ts\" \"next dev\" \"npx wait-on http://localhost:3003 && electron .\"",
    "electron:dev": "concurrently -k -n \"SERVER,ELECTRON\" -c \"magenta,blue\" \"ts-node-dev --esm --respawn --transpile-only server.ts\" \"npx wait-on http://localhost:3003 && electron .\"",
    "electron:open": "npx wait-on http://localhost:3003 && electron .",
    "redis:logs": "docker logs -f ${REDIS_CONTAINER_NAME:-redis}",
    "locks:redis": "node scripts/print-locks-redis.mjs",
    "build:renderer": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:server && npm run build:electron && npx electron-builder --linux AppImage",
    "build:arm64": "npm run build:renderer && npm run build:electron && npx electron-builder --linux AppImage --arm64",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "npx electron .",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier . --write",
    "postinstall": "npx electron-builder install-app-deps",
    "logs:monitor": "LOG_MONITOR_ONLY=1 LOG_MONITOR_START_ONLY=1 LOG_LEVEL=info next dev",
    "logs:full": "LOG_MONITOR_ONLY=0 LOG_LEVEL=debug next dev",
    "locks": "node scripts/print-locks-redis.mjs",
    "locks:station": "STATION_ID=$npm_config_id node scripts/print-locks-redis.mjs",
    "locks:watch": "node scripts/print-locks-redis.mjs --watch --clear",
    "locks:station:watch": "STATION_ID=$npm_config_id node scripts/print-locks-redis.mjs --watch --clear"
  },
  "dependencies": {
    
    "@heroicons/react": "^2.1.3",
    "@serialport/parser-readline": "^13.0.0",
    "@xmldom/xmldom": "^0.8.11",
    "framer-motion": "^12.23.12",
    "ioredis": "^5.7.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "serialport": "^13.0.0",
    "zod": "3.25.42"
  },
  "devDependencies": {
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "9.27.0",
    "husky": "9.1.7",
    "postcss": "^8.4.38",
    "prettier": "3.5.3",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.8.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.nagyv.typescriptnextjsstarter",
    "productName": "Wireless KFB",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      ".next/**/*",
      ".env.production",
      "dist/main/**/*",
      "dist-server/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      {
        "from": "assets/icon.png",
        "to": "assets/icon.png"
      },
      {
        "from": "dist-server",
        "to": "dist-server"
      }
    ],
    "linux": {
      "icon": "assets",
      "target": [
        "AppImage"
      ]
    }
  }
}
