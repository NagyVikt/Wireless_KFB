{
  "name": "typescript-nextjs-starter",
  "version": "1.0.0",
  "description": "A TypeScript starter for Next.js that includes all you need to build amazing projects",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "author": {
    "name": "Nagy Viktor",
    "email": "vnagy.kssk@kroschu.com",
    "url": "https://github.com/nagyv"
  },
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "scripts": {
    "dev": "concurrently -k -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"npx wait-on http://localhost:3000 && electron .\"",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:next && npm run build:electron && electron-builder",
    "start": "electron .",
    "type-check": "tsc --noEmit",
    "export": "next build && next export",
    "lint": "eslint \"src/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint \"src/**/*.+(ts|js|tsx)\" --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "format:ci": "prettier --list-different .",
    "postinstall": "husky"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@supabase/supabase-js": "^2.49.8",
    "@t3-oss/env-nextjs": "0.13.6",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "electron-serve": "^1.2.0",
    "next": "15.3.3",
    "next-seo": "^6.5.0",
    "next-themes": "^0.3.0",
    "pg": "^8.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "3.25.42"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.27.0",
    "@ianvs/prettier-plugin-sort-imports": "4.4.2",
    "@types/electron": "^1.6.12",
    "@types/node": "20.12.5",
    "@types/pg": "^8.15.4",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@typescript-eslint/parser": "8.33.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "9.27.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "postcss": "^8.4.38",
    "prettier": "3.5.3",
    "prettier-plugin-sort-json": "4.1.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3",
    "wait-on": "^8.0.3"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint \"src/**/*.+(ts|js|tsx)\" --fix",
      "prettier . --write"
    ]
  },
  "build": {
    "appId": "com.nagyv.typescriptnextjsstarter",
    "productName": "wireless-KFB",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "out/**/*",
      "dist/main/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/icon.png",
        "to": "assets/icon.png",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "arm64"
          ]
        }
      ]
    }
  }
}
