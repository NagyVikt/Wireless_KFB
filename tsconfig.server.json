{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist-server",
    "strict": true,
    
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false
  },
  "include": [
    "server.ts",
    "src/lib/**/*.ts"
  ]
}
