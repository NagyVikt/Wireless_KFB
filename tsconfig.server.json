{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-server",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true,
    "types": ["node", "ws"]
  },
  "include": ["server.ts", "src/lib/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist", "dist-server"]
}
