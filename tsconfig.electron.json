{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",               // or "nodenext"
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "dist/main",
    "rootDir": "main",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "electron"]
  },
  "include": ["main/**/*.ts"]
}
